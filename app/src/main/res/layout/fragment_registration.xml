<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.development.unobtainium.cimedic2.fragments.RegistrationFragment">

    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:fillViewport="false"
        android:layout_alignTop="@+id/email_login_form"
        android:scrollbars="none">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="16dp"
            android:paddingRight="16dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Nombres"
                android:id="@+id/textView"
                android:layout_marginTop="190dp"
                android:paddingBottom="10dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Apellido Paterno"
                android:id="@+id/textView2"
                android:layout_below="@+id/textView"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Apellido Materno"
                android:id="@+id/textView3"
                android:layout_below="@+id/textView2"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:paddingBottom="10dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Fecha de nacimiento"
                android:id="@+id/textView4"
                android:layout_below="@+id/textView3"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/doc_type_spinner"
                android:layout_below="@+id/textView4"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp"
                android:layout_alignEnd="@+id/textView5"
                android:background="#a6a6a6" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Departamento"
                android:id="@+id/textView5"
                android:layout_below="@+id/doc_type_spinner"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Distrito"
                android:id="@+id/textView6"
                android:layout_below="@+id/textView5"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Direccion"
                android:id="@+id/textView7"
                android:layout_below="@+id/textView6"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Email"
                android:id="@+id/textView8"
                android:layout_below="@+id/textView7"
                android:layout_alignParentStart="true"
                android:layout_marginTop="20dp" />

            <CheckBox
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Acepto los terminos de uso"
                android:id="@+id/terms_checkbox"
                android:layout_marginTop="35dp"
                android:checked="false"
                android:layout_below="@+id/password_label"
                android:layout_centerHorizontal="true" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/names_input"
                android:layout_above="@+id/textView2"
                android:layout_toEndOf="@+id/textView4"
                android:text="Kevin" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/last_name_input"
                android:layout_below="@+id/names_input"
                android:layout_alignStart="@+id/names_input"
                android:text="Martin" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/mothers_last_name_input"
                android:layout_below="@+id/last_name_input"
                android:layout_alignStart="@+id/last_name_input"
                android:text="MarchÃ¡n" />

            <EditText
                android:focusable="false"
                android:layout_width="160dp"
                android:layout_height="wrap_content"
                android:inputType="date"
                android:ems="10"
                android:id="@+id/birthday_input"
                android:layout_below="@+id/mothers_last_name_input"
                android:layout_alignEnd="@+id/mothers_last_name_input"
                android:layout_marginLeft="30dp"
                android:text="Fri, 31 Mar 1995" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/department_spinner"
                android:layout_alignTop="@+id/textView5"
                android:layout_toEndOf="@+id/textView3"
                android:background="#a6a6a6" />

            <Spinner
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:id="@+id/district_spinner"
                android:layout_alignTop="@+id/textView6"
                android:layout_alignStart="@+id/department_spinner"
                android:background="#a6a6a6" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/address_input"
                android:layout_alignStart="@+id/district_spinner"
                android:layout_alignParentEnd="true"
                android:layout_below="@+id/district_spinner"
                android:text="Alderaan" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textEmailAddress"
                android:ems="10"
                android:id="@+id/email_input"
                android:layout_below="@+id/address_input"
                android:layout_alignStart="@+id/address_input"
                android:text="kevin.martin@tektonlabs.com" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="REGISTRAR"
                android:id="@+id/register_button"
                android:layout_below="@+id/terms_checkbox"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="24dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/doc_number_input"
                android:layout_alignTop="@+id/doc_type_spinner"
                android:layout_alignParentEnd="true"
                android:layout_alignStart="@+id/department_spinner"
                android:text="08948459" />

            <ProgressBar
                style="?android:attr/progressBarStyleLarge"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/registration_progress"
                android:layout_alignParentTop="true"
                android:layout_alignEnd="@+id/textView6"
                android:layout_above="@+id/textView2"
                android:indeterminate="false" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Password"
                android:id="@+id/password_label"
                android:layout_below="@+id/email_input"
                android:layout_alignParentStart="true"
                android:layout_marginTop="10dp" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:ems="10"
                android:id="@+id/password_input"
                android:layout_below="@+id/email_input"
                android:layout_alignStart="@+id/email_input"
                android:text="password123" />

            <ImageView
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:id="@+id/profile_picture"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="32dp"
                android:scaleType="centerCrop"
                android:src="@drawable/patient_placeholder"/>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
