<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical">

    <RelativeLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="10dp">

        <TextView
            android:text="Edad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/textView9"
            android:layout_alignParentTop="true"
            android:layout_alignStart="@+id/textView14"
            android:textStyle="bold"
            android:textColor="@color/blackColor"/>

        <TextView
            android:text="TextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView17"
            android:layout_alignStart="@+id/textView17"
            android:id="@+id/prescription_reason"
            android:layout_marginRight="25dp" />

        <TextView
            android:text="Instrucción"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/textView14"
            android:layout_below="@+id/prescription_age"
            android:textStyle="bold"
            android:textColor="@color/blackColor"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/prescription_age"
            android:layout_below="@+id/textView9"
            android:layout_alignStart="@+id/textView9" />

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView14"
            android:layout_alignStart="@+id/textView15"
            android:id="@+id/prescription_education_level" />

        <TextView
            android:text="Ocupación"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/textView15"
            android:layout_below="@+id/prescription_education_level"
            android:layout_alignStart="@+id/textView14"
            android:textStyle="bold"
            android:textColor="@color/blackColor"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView15"
            android:layout_alignStart="@+id/textView15"
            android:id="@+id/prescription_occupation" />

        <TextView
            android:text="Estado Civil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/textView16"
            android:layout_below="@+id/prescription_occupation"
            android:layout_alignStart="@+id/prescription_occupation"
            android:textStyle="bold"
            android:textColor="@color/blackColor"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView16"
            android:layout_alignStart="@+id/textView17"
            android:id="@+id/prescription_civil_status" />

        <TextView
            android:text="Motivo de Ingreso"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/textView17"
            android:layout_below="@+id/prescription_civil_status"
            android:layout_alignStart="@+id/textView16"
            android:textStyle="bold"
            android:textColor="@color/blackColor"/>

        <TextView
            android:text="Historia Clínica Anterior"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView18"
            android:layout_below="@+id/prescription_reason"
            android:layout_alignStart="@+id/prescription_reason"
            android:layout_marginTop="15dp"
            android:textStyle="bold"
            android:textColor="@color/blackColor"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView18"
            android:id="@+id/prescription_previous_history" />

        <TextView
            android:text="Tipo de Sangre"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/textView19"
            android:layout_below="@+id/prescription_previous_history"
            android:layout_alignStart="@+id/prescription_previous_history"
            android:textStyle="bold"
            android:textColor="@color/blackColor"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView19"
            android:layout_alignStart="@+id/textView19"
            android:id="@+id/prescription_blood_type" />

        <TextView
            android:text="Observaciones"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:id="@+id/textView27"
            android:layout_below="@+id/prescription_blood_type"
            android:layout_alignStart="@+id/prescription_blood_type"
            android:textStyle="bold"
            android:textColor="@color/blackColor"/>

        <TextView
            android:text="TextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView27"
            android:id="@+id/prescription_diagnosis" />


    </RelativeLayout>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/prescription_detail_button"
        android:textStyle="bold"
        android:textColor="@color/whiteColor"
        android:text="DETALLE"
        android:background="@drawable/red_button"
        android:layout_alignParentBottom="true"
        android:layout_alignEnd="@+id/relativeLayout"
        android:layout_marginTop="25dp"
        android:textSize="20sp" />

</LinearLayout>