<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:text="MARTES - JUEVES (9:00 am - 11:30 am)"
        android:textColor="@color/colorAccent"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/doctor_name"
        android:layout_alignStart="@+id/doctor_name"
        android:layout_marginTop="11dp"
        android:id="@+id/textView13" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="Medium Text"
        android:id="@+id/doctor_name"
        android:layout_marginTop="23dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="13dp"
        android:layout_alignTop="@+id/app_doctor_photo"
        android:layout_toEndOf="@+id/app_doctor_photo" />

    <ImageView
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:id="@+id/app_doctor_photo"
        android:background="@drawable/patient_placeholder"
        android:layout_marginLeft="0dp"
        android:layout_marginTop="12dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

</RelativeLayout>